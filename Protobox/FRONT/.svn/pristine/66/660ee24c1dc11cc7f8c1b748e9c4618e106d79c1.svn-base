<!-- Contact Us -->

<div class="row">
  <div class="col-lg-12 get_in_touch_col">
    <div class="get_in_touch_contents">
      <h1>Contact Us !</h1>
      <form #f="ngForm" (ngSubmit)="onSend(f.value)">
        <div>
          <input id="input_name" class="form_input input_name input_ph" type="email" name="destinataire" ngModel placeholder="Email"
            required="required" data-error="Name is required.">
          <input id="input_email" class="form_input input_email input_ph" type="text" ngModel name="subject" placeholder="Object"
            required="required" data-error="Valid email is required.">
          
          <textarea id="input_message" class="input_ph input_message" type="text" ngModel name="text" placeholder="Message" rows="3"
            required data-error="Please, write us a message."></textarea>
        </div>
        <div>
          <button id="review_submit" type="submit" class="red_button message_submit_btn trans_300" value="Submit" (click)="onSend()">send
            message </button>
        </div>
      </form>
    </div>
  </div>
</div>